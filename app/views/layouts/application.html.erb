<!DOCTYPE html>
<html>
  <head>
    <title>ProjectHistory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-flouid">
      <nav class="navbar navbar-expand-lg bg-light">
        <div class="container">
          <% if user_signed_in? %> 
            <div> Welcome <%= link_to current_user.email, edit_user_registration_path %> </div>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <%= link_to 'Projects', projects_path, class: 'nav-link active' %>
                </li>
              </ul>
            </div> 
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-outline-success' %> 
          <% end %>
        </div>
      </nav>
      <div class="container">
        <% if notice.present? || alert.present? %>
          <p class="notice"><%= notice %></p> 
          <p class="alert"><%= alert %></p>
        <% end %>   
        <%= yield %>
      </div>
    </div> 
  </body>
</html>
